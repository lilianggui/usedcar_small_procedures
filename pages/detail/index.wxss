#detail-head{
  border: solid 1px #ccc;
  border-radius:5px;
  margin:10rpx;
  padding:15rpx
}

#detail-head-basic{
  border-bottom: solid 1px #ccc;
  clear: both;
  height: 135rpx;
  margin-bottom: 10rpx;
}

#detail-head-basic-text{
  width:65%;
  float:left;
}

#detail-head-basic-text text{
  display:block;
  margin-bottom: 15rpx;
}
#detail-head-basic-text .car-name{
  font-size: 18px;
  font-weight: bold
}
#detail-head-basic-text .car-price{
  font-size: 14px;
  color:#777
}

#detail-head-basic-button{
  float:right;
  width:35%;
}

#detail-head-basic-button button{
  display: block;
  width:98%;
  margin-bottom: 5rpx;
  color:#fff;
}

.danger{
   border:1px solid #ff0000;
   background-color: #ff0000;
}

.green{
   border:1px solid #62b900;
   background-color: #62b900;
}

#car-introduction{
  /*限制介绍文本的高度,如果限制字数可以不限制高度 */
  /* height:200rpx;*/
}

#car-introduction .car-introduction{
  font-size: 14px;
  color:#777;
}

#detail-img{
  margin:10rpx;
  
  
}

#detail-img .detail-img-item{
  width:48.5%;
  height:200rpx;
  margin:0 0 20rpx 0;
}
.detail-img-item-left{
  float: left;
}

.detail-img-item-right{
  float: right;
}


#detail-img .detail-img-item image{
  width:100%;
  height:100%;
  border-radius:5px;
  box-shadow: darkgrey 0px 4px 10px 1px;
  margin:0;
}


.input-margin{
  margin: 0 10rpx 0 10rpx;
}

